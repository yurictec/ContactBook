<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <bean id="contactService" class="org.contactBook.services.ContactServiceImpl"/>

    <bean id="repository" class="org.contactBook.repository.MyRepositoryImpl">
        <constructor-arg name="contacts" type="java.util.Set">
            <bean class="java.util.HashSet"/>
        </constructor-arg>
        <constructor-arg name="integer" type="java.util.concurrent.atomic.AtomicInteger">
            <bean class="java.util.concurrent.atomic.AtomicInteger"/>
        </constructor-arg>
    </bean>

    <context:annotation-config/>
</beans>